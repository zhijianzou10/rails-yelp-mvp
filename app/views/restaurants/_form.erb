<div class="container">
  <%= form_for(@restaurant) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address %>
    </div>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
  </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
